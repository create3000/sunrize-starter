{
  "name": "sunrize-installer",
  "productName": "Sunrize X3D Editor",
  "version": "1.0.0",
  "description": "A Multi-Platform X3D Editor",
  "main": "bin/main.js",
  "files": [
    "bin/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/create3000/sunrize-installer.git"
  },
  "keywords": [
    "3D",
    "editor",
    "X3D"
  ],
  "author": "Holger Seelig",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/create3000/sunrize-installer/issues"
  },
  "homepage": "https://create3000.github.io/sunrize/",
  "contributors": [
    {
      "name": "Holger Seelig",
      "email": "holger.seelig@gmail.com",
      "url": "https://github.com/create3000"
    }
  ],
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "electron": "^28.0.0"
  },
  "dependencies": {
    "npm": "^10.2.5",
    "shell-tools": "^1.1.7"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "icon": "./src/assets/images/icon.png",
        "extendInfo": "./src/assets/Info.plist",
        "dir": "./src",
        "ignore": "^/(?!src|package\\.json|node_modules)"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "Sunrize"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
